@page "/tabs"

<PageTitle>Tabs Showcase - Bladix Primitives</PageTitle>

<div style="max-width: 800px; margin: 0 auto; padding: 2rem;">
    <h1>Tabs Showcase</h1>
    <p>Test all Tabs component features and use cases</p>

    <hr style="margin: 2rem 0;" />

    <!-- Example 1: Basic Tabs -->
    <section style="margin-bottom: 3rem;">
        <h2>1. Basic Tabs (Horizontal)</h2>
        <p>Click tabs to switch between content panels</p>
        <p><strong>Current Tab:</strong> @(_basicValue ?? "none")</p>

        <TabsRoot @bind-Value="_basicValue" class="tabs-root">
            <TabsList class="tabs-list">
                <TabsTrigger Value="tab1" class="tabs-trigger">
                    Account
                </TabsTrigger>
                <TabsTrigger Value="tab2" class="tabs-trigger">
                    Password
                </TabsTrigger>
                <TabsTrigger Value="tab3" class="tabs-trigger">
                    Settings
                </TabsTrigger>
            </TabsList>

            <TabsContent Value="tab1" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>Account Information</h3>
                    <p>Make changes to your account here. Click save when you're done.</p>
                    <div style="margin-top: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem;">Name</label>
                        <input type="text" placeholder="John Doe" style="padding: 0.5rem; width: 100%; border: 1px solid #e5e7eb; border-radius: 4px;" />
                    </div>
                    <div style="margin-top: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem;">Email</label>
                        <input type="email" placeholder="john@example.com" style="padding: 0.5rem; width: 100%; border: 1px solid #e5e7eb; border-radius: 4px;" />
                    </div>
                </div>
            </TabsContent>

            <TabsContent Value="tab2" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>Password Settings</h3>
                    <p>Change your password here. After saving, you'll be logged out.</p>
                    <div style="margin-top: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem;">Current Password</label>
                        <input type="password" style="padding: 0.5rem; width: 100%; border: 1px solid #e5e7eb; border-radius: 4px;" />
                    </div>
                    <div style="margin-top: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem;">New Password</label>
                        <input type="password" style="padding: 0.5rem; width: 100%; border: 1px solid #e5e7eb; border-radius: 4px;" />
                    </div>
                </div>
            </TabsContent>

            <TabsContent Value="tab3" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>General Settings</h3>
                    <p>Configure your application preferences.</p>
                    <div style="margin-top: 1rem;">
                        <label>
                            <input type="checkbox" />
                            Enable notifications
                        </label>
                    </div>
                    <div style="margin-top: 0.5rem;">
                        <label>
                            <input type="checkbox" />
                            Dark mode
                        </label>
                    </div>
                </div>
            </TabsContent>
        </TabsRoot>
    </section>

    <!-- Example 2: Default Value -->
    <section style="margin-bottom: 3rem;">
        <h2>2. Tabs with Default Value</h2>
        <p>The second tab is selected by default using <code>DefaultValue</code></p>

        <TabsRoot DefaultValue="profile" class="tabs-root">
            <TabsList class="tabs-list">
                <TabsTrigger Value="overview" class="tabs-trigger">
                    Overview
                </TabsTrigger>
                <TabsTrigger Value="profile" class="tabs-trigger">
                    Profile
                </TabsTrigger>
                <TabsTrigger Value="billing" class="tabs-trigger">
                    Billing
                </TabsTrigger>
            </TabsList>

            <TabsContent Value="overview" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>Overview</h3>
                    <p>Dashboard overview with statistics and charts.</p>
                </div>
            </TabsContent>

            <TabsContent Value="profile" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>Profile (Default)</h3>
                    <p>This tab is open by default. You can control which tab is initially active.</p>
                </div>
            </TabsContent>

            <TabsContent Value="billing" class="tabs-content">
                <div class="tabs-content-inner">
                    <h3>Billing</h3>
                    <p>Manage your subscription and payment methods.</p>
                </div>
            </TabsContent>
        </TabsRoot>
    </section>

    <!-- Example 3: Disabled Tabs -->
    <section style="margin-bottom: 3rem;">
        <h2>3. Disabled Tabs</h2>
        <p>Individual tabs can be disabled</p>

        <TabsRoot DefaultValue="available" class="tabs-root">
            <TabsList class="tabs-list">
