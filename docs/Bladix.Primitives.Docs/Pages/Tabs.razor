        <p>Arrow keys focus tabs without activating them. Press Enter or Space to activate.</p>
        <p><strong>Current Tab:</strong> @(_manualValue ?? "none")</p>

        <TabsRoot @bind-Value="_manualValue" DefaultValue="manual1" class="tabs-root">
            <TabsList class="tabs-list">
                <TabsTrigger Value="manual1" class="tabs-trigger">
