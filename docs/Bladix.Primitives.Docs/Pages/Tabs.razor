<style>
    /* Basic Tabs Styles */
    .tabs-root {
        background-color: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        overflow: hidden;
    }

    .tabs-list {
        display: flex;
        border-bottom: 1px solid #e5e7eb;
        background-color: #f9fafb;
    }

    .tabs-trigger {
        all: unset;
        font-family: inherit;
        background-color: transparent;
        padding: 0.75rem 1.5rem;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        color: #6b7280;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
        position: relative;
    }

    .tabs-trigger:hover {
        background-color: #f3f4f6;
        color: #111827;
    }

    .tabs-trigger:focus-visible {
        outline: 2px solid #3b82f6;
        outline-offset: -2px;
        z-index: 1;
    }

    .tabs-trigger[data-state="active"] {
        color: #3b82f6;
        border-bottom-color: #3b82f6;
        background-color: white;
    }

    .tabs-trigger[data-disabled="true"] {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
    }

    .tabs-content {
        padding: 1.5rem;
        font-size: 14px;
        line-height: 1.6;
    }

    .tabs-content[data-state="inactive"] {
        display: none;
    }

    .tabs-content-inner h3 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        color: #111827;
    }

    /* Vertical Tabs Styles */
    .vertical-tabs {
        display: flex;
        flex-direction: row;
    }

    .vertical-tabs-list {
        flex-direction: column;
        border-bottom: none;
        border-right: 1px solid #e5e7eb;
        min-width: 200px;
    }

    .vertical-tabs .tabs-trigger {
        border-bottom: none;
        border-right: 2px solid transparent;
        text-align: left;
        width: 100%;
    }

    .vertical-tabs .tabs-trigger[data-state="active"] {
        border-right-color: #3b82f6;
        border-bottom-color: transparent;
    }

    /* Force Mount Content */
    .force-mount-content[data-state="inactive"] {
        display: block;
        opacity: 0.5;
        pointer-events: none;
    }

    code {
        background-color: #e5e7eb;
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 0.9em;
        font-family: 'Courier New', monospace;
    }

    hr {
        border: none;
        border-top: 1px solid #e5e7eb;
    }

    ul {
        line-height: 1.8;
    }
</style>

